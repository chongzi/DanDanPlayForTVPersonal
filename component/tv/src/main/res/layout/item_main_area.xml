<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/area_item_width"
    android:layout_height="@dimen/area_item_height"
    android:orientation="vertical">
    <ImageView
        android:id="@id/img"
        android:layout_width="@dimen/area_logo_width"
        android:layout_height="@dimen/area_logo_height"
        tools:src="@drawable/picture_icon_placeholder"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"/>
    <TextView
        style="@style/DanDanTvTextStyle.Title"
        android:id="@id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:text="暗黑破坏神在身边"/>
    <TextView
        style="@style/DanDanTvTextStyle.Chapter"
        android:id="@id/chapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        tools:text="连载中·周六更新"/>
</LinearLayout>